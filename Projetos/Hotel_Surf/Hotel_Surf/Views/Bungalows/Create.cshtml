@model Hotel_Surf.Models.Bungalow

@{
    ViewBag.Title = "Criar";
}

<h2>Criar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Bungalow</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @*@Html.LabelFor(model => model.NumBung, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <label class="control-label col-md-2">Nº de Bungalow</label>

            <div class="col-md-10">
                @Html.EditorFor(model => model.NumBung, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NumBung, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.TipBung, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <label class="control-label col-md-2">Tipo de Bungalow</label>

            <div class="col-md-10">
                @Html.EditorFor(model => model.TipBung, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TipBung, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.PrecoBung, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <label class="control-label col-md-2">Preço do Bungalow</label>

            <div class="col-md-10">
                @Html.EditorFor(model => model.PrecoBung, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PrecoBung, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.Reservado, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <label class="control-label col-md-2">Reservado</label>

            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Reservado)
                    @Html.ValidationMessageFor(model => model.Reservado, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.NumCamas, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <label class="control-label col-md-2">Nº de Camas</label>

            <div class="col-md-10">
                @Html.EditorFor(model => model.NumCamas, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NumCamas, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.NumPessoas, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <label class="control-label col-md-2">Nº de Pessoas</label>

            <div class="col-md-10">
                @Html.EditorFor(model => model.NumPessoas, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NumPessoas, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Criar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
